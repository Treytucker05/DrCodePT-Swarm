# Normalize text files and control line endings across platforms.
# Keep LF for source/config, CRLF for Windows scripts.
* text=auto

# Source/config files - LF in working tree and repo
*.py  text eol=lf
*.md  text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf
*.toml text eol=lf
*.ini  text eol=lf
*.cfg  text eol=lf
*.html text eol=lf
*.css  text eol=lf
*.js   text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.csv  text eol=lf
*.env  text eol=lf

# Windows scripts - CRLF in working tree
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf
*.psm1 text eol=crlf
*.psd1 text eol=crlf

# Common binaries
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
