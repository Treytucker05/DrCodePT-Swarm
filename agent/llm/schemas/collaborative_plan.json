{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "ready_to_plan": {
      "type": "boolean"
    },
    "plan_steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "step_number": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "tool_name": {
            "type": "string"
          },
          "confidence": {
            "type": "integer"
          },
          "needs_clarification": {
            "type": "boolean"
          }
        },
        "additionalProperties": false,
        "required": [
          "step_number",
          "description",
          "tool_name",
          "confidence",
          "needs_clarification"
        ]
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "questions",
    "ready_to_plan",
    "plan_steps"
  ]
}