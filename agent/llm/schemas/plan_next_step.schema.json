{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["goal", "steps"],
  "properties": {
    "goal": { "type": "string" },
    "steps": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": { "$ref": "#/$defs/step" }
    }
  },
  "$defs": {
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "goal", "rationale_short", "tool_name", "tool_args", "success_criteria"],
      "properties": {
        "id": { "type": "string" },
        "goal": { "type": "string" },
        "rationale_short": { "type": "string" },
        "tool_name": { "type": "string" },
        "tool_args": { "type": "array", "items": { "$ref": "#/$defs/kv_pair" } },
        "success_criteria": { "type": "array", "items": { "type": "string" } },
        "preconditions": { "type": "array", "items": { "type": "string" } },
        "postconditions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "kv_pair": {
      "type": "object",
      "additionalProperties": false,
      "required": ["key", "value"],
      "properties": {
        "key": { "type": "string" },
        "value": { "type": "string" }
      }
    }
  }
}
