{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["plans"],
  "properties": {
    "plans": {
      "type": "array",
      "minItems": 1,
      "maxItems": 8,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["score", "plan", "notes", "scores"],
        "properties": {
          "score": { "type": "integer", "minimum": 1, "maximum": 10 },
          "notes": { "type": "string" },
          "scores": {
            "type": "object",
            "additionalProperties": false,
            "required": ["grounding_confidence", "tool_feasibility", "destructiveness", "length"],
            "properties": {
              "grounding_confidence": { "type": "integer", "minimum": 1, "maximum": 10 },
              "tool_feasibility": { "type": "integer", "minimum": 1, "maximum": 10 },
              "destructiveness": { "type": "integer", "minimum": 1, "maximum": 10 },
              "length": { "type": "integer", "minimum": 1, "maximum": 10 }
            }
          },
          "plan": { "$ref": "#/$defs/plan" }
        }
      }
    },
    "fallback_plan": { "$ref": "#/$defs/plan" }
  },
  "$defs": {
    "plan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["goal", "steps"],
      "properties": {
        "goal": { "type": "string" },
        "steps": {
          "type": "array",
          "minItems": 1,
          "maxItems": 12,
          "items": { "$ref": "#/$defs/step" }
        }
      }
    },
    "step": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "goal", "rationale_short", "tool_name", "tool_args", "success_criteria"],
      "properties": {
        "id": { "type": "string" },
        "goal": { "type": "string" },
        "rationale_short": { "type": "string" },
        "tool_name": { "type": "string" },
        "tool_args": { "type": "array", "items": { "$ref": "#/$defs/kv_pair" } },
        "success_criteria": { "type": "array", "items": { "type": "string" } },
        "preconditions": { "type": "array", "items": { "type": "string" } },
        "postconditions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "kv_pair": {
      "type": "object",
      "additionalProperties": false,
      "required": ["key", "value"],
      "properties": {
        "key": { "type": "string" },
        "value": { "type": "string" }
      }
    }
  }
}
