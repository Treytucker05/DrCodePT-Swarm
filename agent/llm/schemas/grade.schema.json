{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "scores": {
      "type": "object",
      "properties": {
        "reasoning": {
          "type": "integer"
        },
        "tool_usage": {
          "type": "integer"
        },
        "efficiency": {
          "type": "integer"
        },
        "overall": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "required": [
        "reasoning",
        "tool_usage",
        "efficiency",
        "overall"
      ]
    },
    "summary": {
      "type": "string"
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "scores",
    "summary",
    "issues",
    "recommendations"
  ],
  "additionalProperties": false
}