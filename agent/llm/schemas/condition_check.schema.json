{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["ok", "failed"],
  "properties": {
    "ok": { "type": "boolean" },
    "failed": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["condition", "reason"],
        "properties": {
          "condition": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    }
  }
}
